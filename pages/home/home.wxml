				<image class="i" src="{{item.longUrl}}" mode="aspectFill" alt="" />
				<view class="txt tac">
					<text class="t">{{item.name}}</text>
					<!-- <text class="p">ï¿¥ 25</text> -->
				</view>
			</view>
			</block>
		</view>
		<!--hList end-->

		<!--loadmore start-->
		<template is="zan-loadmore" data="{{loading}}" />
		<template is="zan-loadmore" data="{{nodata}}" />
		<!--loadmore end-->

	</view>
</block>
