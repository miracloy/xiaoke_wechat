@import "../../../components/datepicker/index.wxss";
.balance{padding-bottom:100rpx}
.orderStatus{border-left:12rpx solid #ccc;height:30rpx;line-height:30rpx;font-size:28rpx;margin:0 25rpx;padding-left:10rpx}
.orderStatus.completed{color:#fd6363;border-color:#fd6363}
.zan-panel{border:none}
.zan-cell::after{background-color:#f1f1f1;border-color:#f1f1f1}
.address .zan-cell::after,.shops .zan-cell::after{display:none}
.zan-cell .zan-cell__bd,.zan-cell .zan-cell__ft{width:50%;color:#666}
.zan-cell__bd.w100{width:100%}
.address{padding:20rpx 0}
.address .zan-cell:first-of-type{padding-bottom:0}
.address .zan-cell:last-of-type{padding-top:10rpx}
.address .zan-cell__bd{padding-right:20rpx}
.address .i{width:650rpx;overflow:hidden}
.zan-form__title{width:240rpx}
.zan-form__item .zan-cell__ft{width:10rpx}
.orderDate .zan-cell{padding-top:15rpx;padding-bottom:15rpx}
.orderDate .zan-cell::after{left:0}

.shops{border-bottom:1px solid #f1f1f1}
.shops .zan-panel{margin:0;border-bottom:1px solid #f1f1f1}
.shops .zan-cell{padding-top:15rpx}
.shops .item .info.zan-cell{padding-right:20%}
.shops .item .zan-cell:first-of-type{padding-bottom:10rpx}
.shops .item .zan-cell:last-of-type{padding-bottom:20rpx}
.shops .item .zan-cell:last-of-type::after{display:block}
.shops .zan-cell.info{padding-top:10rpx;padding-bottom:0}
.shops .zan-cell.info .zan-cell__bd,.shops .zan-cell.info .zan-cell__ft{color:#999;font-size:24rpx}
.shops .zan-panel:first-of-type{padding:0;margin-top:10rpx}
.shops .i{color:#fd6363}

.total{display:block;overflow:hidden;height:50rpx;font-size:28rpx;color:#666;line-height:50rpx;margin:20rpx;border-top:1px solid #f1f1f1;padding-top:20rpx}
.single .total{margin:20rpx 0;padding:0 20rpx;border:none}
.single .zan-cell::after{right:15px}
.single .zan-panel:last-of-type .zan-cell::after{display:none;content:""}
.single .zan-panel{border-bottom:none}

/*setOrder*/
.setOrder{position:fixed;left:0;bottom:0;width:100%;height:100rpx;box-shadow:0px 0px 5px rgba(0,0,0,.2);background-color:#fff}
.setOrder .zan-btn{width:240rpx;text-align:center;line-height:100rpx;text-align:center;font-size:28rpx;color:#fff;border:none;border-radius:0;height:100rpx;background-color:#fd6363}
.cartInfo .t{line-height:100rpx;font-size:32rpx;color:#fd6363;padding-left:20rpx}

/*myPop*/
.myPop .popMain .m{padding:30rpx}
.chooseDate,.choseOrderType{height:900rpx;box-sizing:border-box;-webkit-box-sizing:border-box;margin-top:-100rpx}
.chooseAll{font-size:28rpx}

/*choseOrderType*/
.choseOrderType{margin-top:-200rpx}
.choseOrderType .item{height:88rpx;line-height:88rpx;border-top:1px solid #f1f1f1;position:relative;overflow:hidden}
.choseOrderType .m .item:last-of-type{border-bottom:1px solid #f1f1f1}
.choseOrderType .item radio-group{margin-left:10rpx}
.choseOrderType .item text{margin-left:150rpx;font-size:28rpx}
.choseOrderType .o text{font-size:22rpx;color:#999;margin:20rpx 0;display:block}
.choseOrderType .o .zan-btn{border-color:#fd6363;background-color:#fd6363}
.choseOrderType .checkbox{display:block;width:100%}
.choseOrderType .checkbox text{margin-left:130rpx}

.orderType{overflow:hidden;white-space:nowrap;text-overflow:ellipsis}
.orderType text{margin-right:10rpx}
.plr10{padding:0 10rpx}

.timePicker{width:100%;height:200rpx;margin-bottom:60rpx}
.timePicker .i,.timePicker text{text-align:center;line-height:100rpx;height:100rpx}
.timePicker text{position:relative;top:50rpx}







